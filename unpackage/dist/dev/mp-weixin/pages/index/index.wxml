<view class="mainframe"><block wx:if="{{!isLogin}}"><view class="notLogin"><bw-swiper class="bwSwiper" vue-id="1" swiperList="{{swiperList}}" swiperType="true" autoplay="true" interval="3000" w_h="{{screenRatio}}" indicatorDots="{{false}}" bind:__l="__l"></bw-swiper><view class="content"><text class="text-shadow text-lg padding solid-bottom">当前未登录,点击按钮登录</text></view><button data-event-opts="{{[['tap',[['goLogin',['$event']]]]]}}" class="bg-blue" style="width:50%;" bindtap="__e"><text class="cuIcon-pullup"></text><text>开始使用</text></button></view></block><block wx:if="{{isLogin}}"><view class="hasLogin"><view class="top light"><view class="circlePercent"><circle-percent vue-id="2" bg="#9ca1ff" percent="{{accuracy}}" bind:__l="__l"></circle-percent></view><view class="statInfo"><view class="problem"><text class="pTitle">做题总数</text><text class="pNum">{{problemNum+"个"}}</text></view><view class="paper"><text class="pTitle">已做试卷</text><text class="pNum">{{paperNum+"套"}}</text></view></view></view><view class="indexList"><index-list class="listItem" vue-id="3" title="我的试卷" icon="{{iconList.paper}}" iconSize="100" data-event-opts="{{[['^tap',[['goPaperList']]]]}}" bind:tap="__e" bind:__l="__l"></index-list><index-list class="listItem1" vue-id="4" title="我的错题" icon="{{iconList.paperb}}" iconSize="80" subHead="针对曾经错误的考点进行测试" bind:__l="__l"></index-list><index-list class="listItem2" vue-id="5" title="做题记录" icon="{{iconList.papera}}" iconSize="90" subHead="查看我的历史做题记录" bind:__l="__l"></index-list><index-list class="listItem3" vue-id="6" title="消息中心" icon="{{iconList.message}}" iconSize="90" subHead="查看我的消息" bind:__l="__l"></index-list></view></view></block></view>